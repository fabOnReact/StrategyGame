<h1>Subjects#delete</h1>

<%= button_to "Previous Page", {:action => "index"}, :method => :get %>

<p>Are you sure you want to delete the following entry?</p>

<% if !flash[:notice].blank? %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if !flash[:alert].blank? %>
  <div class="alert alert-warning">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_for(:subject, :url => {:action => "destroy", :id => @subject.id}, method: :delete, html: {:class => "form-horizontal"}) do |f| %>
	<div class="form-group">
	<%= f.label :name, :class =>"col-md-1 control-label" %>
		<div class="col-md-2">
			<%= f.text_field :name, :class => "form-control", :disabled => "true"  %>
		</div>
	</div>
	<div class="form-group">
	<%= f.label :position, :class =>"col-md-1 control-label" %>
		<div class="col-md-2">
			<%= f.text_field :position, :class => "form-control", :disabled => "true" %>
		</div>
	</div>
	<div class="form-group">
	<%= f.label :visible, :class =>"col-md-1 control-label" %>
		<div class="col-md-2">
			<%= f.text_field :visible, :class => "form-control", :disabled => "true"  %>
		</div>
	</div>
	<%= submit_tag("Delete Entry") %>
<% end %>