<h1>Pages#new</h1>
<p>Find me in app/views/pages/new.html.erb</p>
<%= form_for(:page, :url => {:action => :create, :id => params[:id]}, html: {:class => "form-horizontal"}) do |f| %>
	<div class="form-group">
	<%= f.label :name, :class =>"col-md-1 control-label" %>
		<div class="col-md-2">
			<%= f.text_field :name, :class => "form-control" %>
		</div>
	</div>
	<div class="form-group">
	<%= f.label :position, :class =>"col-md-1 control-label" %>
		<div class="col-md-2">
			<%= f.text_field :position, :class => "form-control" %>
		</div>
	</div>
	<div class="form-group">
	<%= f.label :visible, :class =>"col-md-1 control-label" %>
		<div class="col-md-2">
			<%= f.text_field :visible, :class => "form-control" %>
		</div>
	</div>		
	<%= submit_tag("Submit") %>
<% end %>