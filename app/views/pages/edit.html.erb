<h1>Pages#edit</h1>
<p>Find me in app/views/pages/edit.html.erb</p>

<%= form_for(:page, :url => {:action => "update", :id => @page.id}, method: :patch, html: {:class => "form-horizontal"}) do |f| %>
	<div class="form-group">
	<%= f.label :name, :class =>"col-md-1 control-label" %>
		<div class="col-md-2">
			<%= f.text_field :name, :class => "form-control" %>
		</div>
	</div>
	<div class="form-group">
	<%= f.label :position, :class =>"col-md-1 control-label" %>
		<div class="col-md-2">
			<%= f.text_field :position, :class => "form-control" %>
		</div>
	</div>
	<div class="form-group">
	<%= f.label :visible, :class =>"col-md-1 control-label" %>
		<div class="col-md-2">
			<%= f.text_field :visible, :class => "form-control" %>
		</div>
	</div>		
	<%= submit_tag("Update") %>
<% end %>